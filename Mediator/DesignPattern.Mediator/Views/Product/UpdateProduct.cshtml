@model DesignPattern.Mediator.MediatorPattern.Results.UpdateProductByIdQueryResult
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <label>Ürün Id</label>
        <input type="text" class="form-control" name="ProductId" value="@Model.ProductId" readonly />
        <br />
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="ProductName" value="@Model.ProductName" />
        <br />
        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" name="ProductPrice" value="@Model.ProductPrice" />
        <br />
        <label>Ürün Stok</label>
        <input type="text" class="form-control" name="ProductStock" value="@Model.ProductStock" />
        <br />
        <label>Stok Türü</label>
        <input type="text" class="form-control" name="ProductStockType" value="@Model.ProductStockType" />
        <br />
        <label>Ürün Kategori</label>
        <input type="text" class="form-control" name="ProductCategory" value="@Model.ProductCategory" />
        <br />
        <button class="btn btn-outline-primary">Güncelle</button>
    </form>
</div>